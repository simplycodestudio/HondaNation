<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.jacek.hondadiagnostic.ResponseProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_profile"/>

    <TextView
        android:id="@+id/profile_visit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Display UserName"
        android:textColor="@color/cardview_light_background"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/profile_visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"

        android:text="Display UserStatus"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_visit_send_req_btn"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_above="@+id/profile_decline_friend_req_btn"
        android:layout_alignLeft="@+id/profile_decline_friend_req_btn"
        android:layout_alignStart="@+id/profile_decline_friend_req_btn"
        android:layout_marginBottom="11dp"
        android:background="@android:color/holo_red_dark"
        android:text="Send Friend Request"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/profile_decline_friend_req_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="Decline Friend Request"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>
