<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacek.hondadiagnostic.ResponseStatusActivity">

    <include layout="@layout/response_bar_layout"
        android:id="@+id/response_status_bar">

    </include>

    <EditText
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/response_status_bar"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Status..."
        android:inputType="textPersonName"
        android:padding="30dp" />

    <Button
        android:id="@+id/save_status_change_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Save_Changes" />

</RelativeLayout>
